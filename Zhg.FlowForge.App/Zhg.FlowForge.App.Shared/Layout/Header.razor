<!-- Header.razor.cs -->
@using static Zhg.FlowForge.App.Shared.Layout.LanguageSwitcher
@inject NavigationManager Navigation

<header class="sticky top-0 z-50 border-b border-gray-200/50 bg-white/80 shadow-sm backdrop-blur-lg">
    <nav class="h-10 px-3">
        <div class="flex h-full items-center justify-between">
            <!-- Logo -->
            <div class="flex cursor-pointer items-center space-x-1.5" @onclick="NavigateHome">
                <div class="flex h-5 w-5 transform items-center justify-center rounded bg-gradient-to-br from-blue-500 to-indigo-600 shadow-sm transition-transform duration-200 hover:scale-105">
                    <span class="text-xs font-semibold text-white">A</span>
                </div>
                <span class="bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-xs font-semibold text-transparent">
                    AppName
                </span>
            </div>

            <!-- Desktop Navigation -->
            <div class="hidden items-center space-x-0.5 md:flex">
                <NavLink href="/" class="nav-link">
                    <span class="flex items-center space-x-1">
                        <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                        <span class="text-xs">@CurrentLanguage.Home</span>
                    </span>
                </NavLink>
                <NavLink href="/features" class="nav-link">
                    <span class="flex items-center space-x-1">
                        <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                        <span class="text-xs">@CurrentLanguage.Features</span>
                    </span>
                </NavLink>
                <NavLink href="/about" class="nav-link">
                    <span class="flex items-center space-x-1">
                        <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span class="text-xs">@CurrentLanguage.About</span>
                    </span>
                </NavLink>
                <NavLink href="/contact" class="nav-link">
                    <span class="flex items-center space-x-1">
                        <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                        <span class="text-xs">@CurrentLanguage.Contact</span>
                    </span>
                </NavLink>
            </div>

            <!-- Right Section -->
            <div class="flex items-center space-x-1.5">
                <LanguageSwitcher CurrentLanguage="CurrentLanguage" OnLanguageChanged="HandleLanguageChanged" />

                <!-- User Menu Button -->
                <button class="hidden transform items-center space-x-1 rounded bg-gradient-to-r from-blue-500 to-indigo-600 px-2 py-1 text-xs text-white shadow-sm transition-all duration-200 hover:scale-105 hover:from-blue-600 hover:to-indigo-700 hover:shadow md:flex">
                    <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                    <span class="font-medium">@CurrentLanguage.Login</span>
                </button>

                <!-- Mobile Menu Button -->
                <button @onclick="ToggleMobileMenu" class="rounded p-1 transition-colors duration-200 hover:bg-gray-100 md:hidden">
                    <svg class="h-3.5 w-3.5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        @if (!mobileMenuOpen)
                        {
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        }
                        else
                        {
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        }
                    </svg>
                </button>
            </div>
        </div>

        <!-- Mobile Menu -->
        @if (mobileMenuOpen)
        {
            <div class="animate-slide-down border-t border-gray-100 py-2 md:hidden">
                <div class="flex flex-col space-y-1">
                    <NavLink href="/" class="mobile-nav-link text-xs">@CurrentLanguage.Home</NavLink>
                    <NavLink href="/features" class="mobile-nav-link text-xs">@CurrentLanguage.Features</NavLink>
                    <NavLink href="/about" class="mobile-nav-link text-xs">@CurrentLanguage.About</NavLink>
                    <NavLink href="/contact" class="mobile-nav-link text-xs">@CurrentLanguage.Contact</NavLink>
                    <button class="mt-1 w-full rounded bg-gradient-to-r from-blue-500 to-indigo-600 px-3 py-1.5 text-xs text-white shadow-md transition-all duration-200 hover:from-blue-600 hover:to-indigo-700">
                        @CurrentLanguage.Login
                    </button>
                </div>
            </div>
        }
    </nav>
</header>

<style>
    .nav-link {
        padding: 0.25rem 0.5rem;
        border-radius: 0.25rem;
        color: #374151;
        font-weight: 500;
        transition: all 0.2s;
        position: relative;
    }

        .nav-link:hover {
            background-color: #f3f4f6;
            color: #2563eb;
        }

        .nav-link.active {
            color: #2563eb;
            background-color: #eff6ff;
        }

    .mobile-nav-link {
        padding: 0.375rem 0.75rem;
        border-radius: 0.25rem;
        color: #374151;
        font-weight: 500;
        transition: all 0.2s;
    }

        .mobile-nav-link:hover, .mobile-nav-link.active {
            background-color: #eff6ff;
            color: #2563eb;
        }

    @@keyframes slide-down {
        from {
            opacity: 0;
            transform: translateY(-8px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-slide-down {
        animation: slide-down 0.2s ease-out;
    }
</style>

@code {
    private bool mobileMenuOpen = false;

    [Parameter]
    public LanguageData CurrentLanguage { get; set; } = LanguageData.English;

    [Parameter]
    public EventCallback<LanguageData> OnLanguageChanged { get; set; }

    private void ToggleMobileMenu()
    {
        mobileMenuOpen = !mobileMenuOpen;
    }

    private void NavigateHome()
    {
        Navigation.NavigateTo("/");
        mobileMenuOpen = false;
    }

    private async Task HandleLanguageChanged(LanguageData newLanguage)
    {
        await OnLanguageChanged.InvokeAsync(newLanguage);
    }
}