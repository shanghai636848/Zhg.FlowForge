<!-- Footer.razor.cs -->
@using static Zhg.FlowForge.App.Shared.Layout.LanguageSwitcher
<footer class="bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900 text-white">
    <div class="h-8">
        <div class="flex h-full items-center justify-between px-3">
            <p class="text-xs text-gray-400">
                © @DateTime.Now.Year AppName. @CurrentLanguage.AllRightsReserved
            </p>
            <div class="flex space-x-3 text-xs">
                <a href="/privacy" class="footer-link">@CurrentLanguage.Privacy</a>
                <a href="/terms" class="footer-link">@CurrentLanguage.Terms</a>
                <a href="/cookies" class="footer-link">@CurrentLanguage.Cookies</a>
            </div>
        </div>
    </div>
</footer>

<style>
    .footer-link {
        color: #d1d5db;
        font-size: 0.75rem;
        transition: all 0.2s;
    }

        .footer-link:hover {
            color: #60a5fa;
        }
</style>

@code {
    [Parameter]
    public LanguageData CurrentLanguage { get; set; } = LanguageData.English;
}