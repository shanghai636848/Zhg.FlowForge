@using static Zhg.FlowForge.App.Shared.Layout.LanguageSwitcher

<!-- 页脚 - 统一样式 紧凑高度 -->
<footer class="border-t border-slate-200/60 bg-gradient-to-br from-slate-50 via-purple-50/20 to-pink-50/20">
    <div class="mx-auto max-w-full px-3 py-3">
        <div class="flex flex-col items-center justify-between gap-2 md:flex-row">
            <!-- Logo 和版权 -->
            <div class="flex flex-col items-center gap-1.5 md:items-start">
                <div class="flex items-center gap-1.5">
                    <div class="flex h-6 w-6 items-center justify-center rounded-lg bg-gradient-to-br from-blue-500 via-indigo-500 to-purple-600 shadow-md">
                        <svg class="h-3.5 w-3.5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                    </div>
                    <span class="bg-gradient-to-r from-blue-600 via-indigo-600 to-purple-600 bg-clip-text text-xs font-bold text-transparent">
                        FlowForge
                    </span>
                </div>
                <p class="text-center text-[10px] text-slate-500 md:text-left">
                    © @DateTime.Now.Year FlowForge. @CurrentLanguage.AllRightsReserved
                </p>
            </div>

            <!-- 社交媒体链接 -->
            <div class="flex items-center gap-1.5">
                <button @onclick='() => HandleSocialClick("twitter")'
                        class="group flex h-7 w-7 items-center justify-center rounded-lg border border-slate-200 bg-white/80 shadow-sm backdrop-blur-sm transition-all hover:scale-110 hover:border-blue-300 hover:bg-blue-50 hover:shadow-md active:scale-95"
                        title="Twitter">
                    <svg class="h-3.5 w-3.5 text-slate-600 transition-colors group-hover:text-blue-500" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z" />
                    </svg>
                </button>

                <button @onclick='() => HandleSocialClick("github")'
                        class="group flex h-7 w-7 items-center justify-center rounded-lg border border-slate-200 bg-white/80 shadow-sm backdrop-blur-sm transition-all hover:scale-110 hover:border-slate-400 hover:bg-slate-50 hover:shadow-md active:scale-95"
                        title="GitHub">
                    <svg class="h-3.5 w-3.5 text-slate-600 transition-colors group-hover:text-slate-900" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.87 8.17 6.84 9.5.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34-.46-1.16-1.11-1.47-1.11-1.47-.91-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.87 1.52 2.34 1.07 2.91.83.09-.65.35-1.09.63-1.34-2.22-.25-4.55-1.11-4.55-4.92 0-1.11.38-2 1.03-2.71-.1-.25-.45-1.29.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.65-.33 2.5-.33.85 0 1.71.11 2.5.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.35.2 2.39.1 2.64.65.71 1.03 1.6 1.03 2.71 0 3.82-2.34 4.66-4.57 4.91.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0012 2z" />
                    </svg>
                </button>

                <button @onclick='() => HandleSocialClick("linkedin")'
                        class="group flex h-7 w-7 items-center justify-center rounded-lg border border-slate-200 bg-white/80 shadow-sm backdrop-blur-sm transition-all hover:scale-110 hover:border-blue-400 hover:bg-blue-50 hover:shadow-md active:scale-95"
                        title="LinkedIn">
                    <svg class="h-3.5 w-3.5 text-slate-600 transition-colors group-hover:text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                    </svg>
                </button>

                <button @onclick='() => HandleSocialClick("youtube")'
                        class="group flex h-7 w-7 items-center justify-center rounded-lg border border-slate-200 bg-white/80 shadow-sm backdrop-blur-sm transition-all hover:scale-110 hover:border-red-300 hover:bg-red-50 hover:shadow-md active:scale-95"
                        title="YouTube">
                    <svg class="h-3.5 w-3.5 text-slate-600 transition-colors group-hover:text-red-600" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                    </svg>
                </button>
            </div>

            <!-- 链接 -->
            <div class="flex items-center gap-3 text-[10px]">
                <a href="/privacy" class="footer-link group">
                    <span class="relative">
                        @CurrentLanguage.Privacy
                        <span class="absolute -bottom-0.5 left-0 h-px w-0 bg-gradient-to-r from-blue-500 to-indigo-500 transition-all duration-300 group-hover:w-full"></span>
                    </span>
                </a>
                <span class="text-slate-300">|</span>
                <a href="/terms" class="footer-link group">
                    <span class="relative">
                        @CurrentLanguage.Terms
                        <span class="absolute -bottom-0.5 left-0 h-px w-0 bg-gradient-to-r from-blue-500 to-indigo-500 transition-all duration-300 group-hover:w-full"></span>
                    </span>
                </a>
                <span class="text-slate-300">|</span>
                <a href="/cookies" class="footer-link group">
                    <span class="relative">
                        @CurrentLanguage.Cookies
                        <span class="absolute -bottom-0.5 left-0 h-px w-0 bg-gradient-to-r from-blue-500 to-indigo-500 transition-all duration-300 group-hover:w-full"></span>
                    </span>
                </a>
            </div>
        </div>
    </div>
</footer>

<style>
    .footer-link {
        color: #64748b;
        font-weight: 500;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }

        .footer-link:hover {
            color: #4f46e5;
            transform: translateY(-1px);
        }
</style>

@code {
    [Parameter]
    public LanguageData CurrentLanguage { get; set; } = LanguageData.English;

    private void HandleSocialClick(string platform)
    {
        Console.WriteLine($"Navigating to {platform}");
    }
}