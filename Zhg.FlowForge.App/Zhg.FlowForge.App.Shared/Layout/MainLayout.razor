@using static Zhg.FlowForge.App.Shared.Layout.LanguageSwitcher
@inherits LayoutComponentBase

<!-- 主布局 - 紧凑优化版 -->
<div class="flex h-screen flex-col overflow-hidden bg-gradient-to-br from-slate-50 via-purple-50/20 to-pink-50/20">
    <Header @bind-CurrentLanguage="currentLanguage" />

    <!-- 主内容区域 - 占据剩余空间 -->
    <main class="flex-1 overflow-hidden">
        <div class="h-full animate-fade-in">
            @Body
        </div>
    </main>

    <Footer CurrentLanguage="currentLanguage" />
</div>

<style>
    /* 全局滚动条样式 */
    ::-webkit-scrollbar {
        width: 6px;
        height: 6px;
    }

    ::-webkit-scrollbar-track {
        background: #f1f5f9;
        border-radius: 3px;
    }

    ::-webkit-scrollbar-thumb {
        background: linear-gradient(to bottom, #cbd5e1, #94a3b8);
        border-radius: 3px;
        transition: background 0.2s;
    }

        ::-webkit-scrollbar-thumb:hover {
            background: linear-gradient(to bottom, #94a3b8, #64748b);
        }

    /* 淡入动画 */
    @@keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(4px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in {
        animation: fade-in 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* 防止整体页面滚动 */
    html, body {
        overflow: hidden;
        height: 100%;
        margin: 0;
        padding: 0;
    }

    /* 全局字体优化 */
    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        font-size: 12px;
        line-height: 1.5;
        color: #334155;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    /* 输入框全局样式优化 */
    input, textarea, select {
        font-size: 12px;
    }

        input:focus, textarea:focus, select:focus {
            outline: none;
        }

    /* 按钮全局样式优化 */
    button {
        font-size: 12px;
        cursor: pointer;
    }

        button:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

    /* 选择文本样式 */
    ::selection {
        background-color: rgba(99, 102, 241, 0.2);
        color: inherit;
    }

    ::-moz-selection {
        background-color: rgba(99, 102, 241, 0.2);
        color: inherit;
    }
</style>

@code {
    private LanguageData currentLanguage = LanguageData.English;
}