@inherits LayoutComponentBase

<div class="flex min-h-screen flex-col bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50">
    <Header />
    
    <main class="container mx-auto flex-1 px-4 py-6">
        <div class="animate-fade-in">
            @Body
        </div>
    </main>
    
    <Footer />
</div>

<style>
    @@keyframes fade-in {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .animate-fade-in {
        animation: fade-in 0.5s ease-out;
    }
</style>

