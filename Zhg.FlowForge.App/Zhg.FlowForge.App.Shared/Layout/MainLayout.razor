<!-- MainLayout.razor.cs -->
@inherits LayoutComponentBase

<div class="flex min-h-screen flex-col bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50">
    <Header CurrentLanguage="CurrentLanguage" OnLanguageChanged="HandleLanguageChanged" />

    <main class="flex-1">
        @Body
    </main>

    <Footer CurrentLanguage="CurrentLanguage" />
</div>

@code {
    private Zhg.FlowForge.App.Shared.Layout.LanguageSwitcher.LanguageData CurrentLanguage { get; set; } = Zhg.FlowForge.App.Shared.Layout.LanguageSwitcher.LanguageData.English;

    private void HandleLanguageChanged(Zhg.FlowForge.App.Shared.Layout.LanguageSwitcher.LanguageData newLanguage)
    {
        CurrentLanguage = newLanguage;
        StateHasChanged();
    }
}