<!-- FormGroup.razor - 优化版表单组件 -->
<div class="flex flex-col space-y-2">
    <label class="flex items-center gap-2 text-sm font-semibold @GetTextColor()">
        <i class="fas @Icon text-xs @GetIconColor()"></i>
        @Label
    </label>
    @ChildContent
</div>

@code {
    [Parameter] public string Label { get; set; } = "";
    [Parameter] public string Icon { get; set; } = "";
    [Parameter] public string Color { get; set; } = "slate";
    [Parameter] public RenderFragment? ChildContent { get; set; }

    private string GetTextColor() => Color switch
    {
        "violet" => "text-violet-700",
        "cyan" => "text-cyan-700",
        "indigo" => "text-indigo-700",
        "amber" => "text-amber-700",
        "emerald" => "text-emerald-700",
        "purple" => "text-purple-700",
        "rose" => "text-rose-700",
        "blue" => "text-blue-700",
        "fuchsia" => "text-fuchsia-700",
        _ => "text-slate-700"
    };

    private string GetIconColor() => Color switch
    {
        "violet" => "text-violet-500",
        "cyan" => "text-cyan-500",
        "indigo" => "text-indigo-500",
        "amber" => "text-amber-500",
        "emerald" => "text-emerald-500",
        "purple" => "text-purple-500",
        "rose" => "text-rose-500",
        "blue" => "text-blue-500",
        "fuchsia" => "text-fuchsia-500",
        _ => "text-slate-500"
    };
}