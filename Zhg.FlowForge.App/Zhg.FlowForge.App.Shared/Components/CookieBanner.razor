@using Zhg.FlowForge.App.Shared.Components.Buttons
@inject ILocalizationService Localization

<div class="fixed inset-x-0 bottom-0 z-50 animate-[slideInUp_0.3s_ease-out] p-4">
	<div class="mx-auto max-w-[96rem]">
		<div class="rounded-lg border border-slate-200 bg-white p-4 shadow-2xl">
			<div class="flex flex-col items-start gap-4 md:flex-row md:items-center">
				<!-- 图标 -->
				<div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-lg bg-blue-100">
					<i class="fas fa-cookie-bite text-xl text-blue-600"></i>
				</div>

				<!-- 内容 -->
				<div class="flex-1">
					<h3 class="mb-1 text-sm font-semibold text-slate-900">
						我们使用 Cookie
					</h3>
					<p class="text-xs text-slate-600">
						我们使用 Cookie 来改善您的浏览体验、提供个性化内容和分析网站流量。
						继续使用本网站即表示您同意我们使用 Cookie。
						<a href="/privacy" class="text-blue-600 underline hover:text-blue-700">
							了解更多
						</a>
					</p>
				</div>

				<!-- 操作按钮 -->
				<div class="flex shrink-0 items-center gap-2">
					<Button Variant="secondary"
							Size="sm"
							OnClick="OnReject">
						拒绝
					</Button>
					<Button Variant="primary"
							Size="sm"
							OnClick="OnAccept">
						接受
					</Button>
				</div>
			</div>
		</div>
	</div>
</div>

@code {
	[Parameter] public EventCallback OnAccept { get; set; }
	[Parameter] public EventCallback OnReject { get; set; }
}