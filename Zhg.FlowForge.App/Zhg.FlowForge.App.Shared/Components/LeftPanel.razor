<!-- LeftPanel.razor.cs -->
<div class="flex w-52 flex-col border-r border-slate-200/80 bg-white/95 shadow-sm backdrop-blur-sm">
    <div class="flex items-center justify-between border-b border-slate-200/80 bg-gradient-to-r from-slate-50 to-blue-50/50 px-3 py-2">
        <span class="text-xs font-semibold uppercase tracking-wider text-slate-700">工具箱</span>
        <i class="fas fa-puzzle-piece text-xs text-slate-400"></i>
    </div>

    <div class="flex flex-1 flex-col space-y-2 overflow-y-auto p-2">
        <ToolCategory Title="流程控制" Icon="fa-sitemap">
            <ToolItem Type="bpmn:StartEvent" Icon="fa-play-circle" Label="开始" />
            <ToolItem Type="bpmn:EndEvent" Icon="fa-stop-circle" Label="结束" />
            <ToolItem Type="bpmn:ExclusiveGateway" Icon="fa-code-branch" Label="排他" />
            <ToolItem Type="bpmn:ParallelGateway" Icon="fa-plus-circle" Label="并行" />
            <ToolItem Type="bpmn:InclusiveGateway" Icon="fa-circle" Label="包容" />
            <ToolItem Type="bpmn:EventBasedGateway" Icon="fa-share-alt" Label="事件" />
        </ToolCategory>

        <ToolCategory Title="任务类型" Icon="fa-tasks">
            <ToolItem Type="bpmn:Task" Icon="fa-square" Label="任务" />
            <ToolItem Type="bpmn:UserTask" Icon="fa-user" Label="用户" />
            <ToolItem Type="bpmn:ServiceTask" Icon="fa-cogs" Label="服务" />
            <ToolItem Type="bpmn:ManualTask" Icon="fa-hand-paper" Label="手动" />
            <ToolItem Type="bpmn:BusinessRuleTask" Icon="fa-gavel" Label="规则" />
            <ToolItem Type="bpmn:ScriptTask" Icon="fa-code" Label="脚本" />
        </ToolCategory>

        <ToolCategory Title="其他元素" Icon="fa-shapes">
            <ToolItem Type="bpmn:SubProcess" Icon="fa-th-large" Label="子流程" />
            <ToolItem Type="bpmn:CallActivity" Icon="fa-phone-alt" Label="调用" />
            <ToolItem Type="bpmn:DataObjectReference" Icon="fa-file-alt" Label="数据" />
            <ToolItem Type="bpmn:DataStoreReference" Icon="fa-database" Label="存储" />
        </ToolCategory>
    </div>
</div>