					<div class="demo-box-light">4</div>
				</div>
				<div class="code-block">class="grid-flow-col"</div>
			</div>
		</div>
	</section>

	<!-- Grid 项目放置 -->
	<section>
		<h2 class="section-title">Grid 项目放置</h2>

		<div class="demo-container">
			<h3 class="font-semibold mb-2">col-span 和 row-span</h3>
			<div class="grid grid-cols-3 gap-2">
				<div class="demo-box-light col-span-2">col-span-2</div>
				<div class="demo-box-light">正常</div>
				<div class="demo-box-light">正常</div>
				<div class="demo-box-light row-span-2">row-span-2</div>
				<div class="demo-box-light">正常</div>
				<div class="demo-box-light">正常</div>
			</div>
			<div class="code-block">
				class="col-span-2"<br>
				class="row-span-2"
			</div>
		</div>

		<div class="demo-container">
			<h3 class="font-semibold mb-2">col-start 和 col-end</h3>
			<div class="grid grid-cols-4 gap-2">
				<div class="demo-box-light col-start-2 col-end-4">col-start-2 col-end-4</div>
				<div class="demo-box-light">1</div>
				<div class="demo-box-light">2</div>
				<div class="demo-box-light">3</div>
				<div class="demo-box-light">4</div>
			</div>
			<div class="code-block">class="col-start-2 col-end-4"</div>
		</div>
	</section>

	<!-- Grid 间隙 -->
	<section>
		<h2 class="section-title">Grid 间隙</h2>

		<div class="comparison-container">
			<div class="demo-container">
				<h3 class="font-semibold mb-2">gap-2</h3>
				<div class="grid grid-cols-2 gap-2">
					<div class="demo-box-light">1</div>
					<div class="demo-box-light">2</div>
					<div class="demo-box-light">3</div>
					<div class="demo-box-light">4</div>
				</div>
				<div class="code-block">class="grid grid-cols-2 gap-2"</div>
			</div>

			<div class="demo-container">
